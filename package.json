{
  "name": "@missingcore/react-native-metadata-retriever",
  "version": "0.1.0",
  "description": "React Native wrapper for Android's unstable `MetadataRetriever` API.",
  "main": "./lib/module/index.mjs",
  "module": "./lib/module/index.mjs",
  "types": "./lib/typescript/index.d.ts",
  "react-native": "./src/index.tsx",
  "source": "./src/index.tsx",
  "exports": {
    ".": {
      "types": "./lib/typescript/index.d.ts",
      "import": "./lib/module/index.mjs"
    }
  },
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/.*"
  ],
  "scripts": {
    "example:expo": "pnpm --filter expo-demo run",
    "example:react-native": "pnpm --filter react-native-demo run",
    "test": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MissingCore/react-native-metadata-retriever.git"
  },
  "author": "cyanChill",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MissingCore/react-native-metadata-retriever/issues"
  },
  "homepage": "https://github.com/MissingCore/react-native-metadata-retriever#readme",
  "devDependencies": {
    "@react-native/eslint-config": "^0.73.1",
    "@release-it/keep-a-changelog": "^5.0.0",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.2.44",
    "del-cli": "^5.1.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "18.2.0",
    "react-native": "0.74.3",
    "react-native-builder-bob": "^0.25.0",
    "release-it": "^17.5.0",
    "release-it-pnpm": "^4.6.2",
    "typescript": "^5.2.2"
  },
  "resolutions": {
    "@types/react": "^18.2.44"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "verbose": true
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "build: release ${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/keep-a-changelog": {
        "filename": "CHANGELOG.md",
        "addUnreleased": true,
        "addVersionUrl": true
      },
      "release-it-pnpm": {}
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "coverage/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "RNMetadataRetrieverSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.metadataretriever"
    }
  },
  "create-react-native-library": {
    "type": "module-mixed",
    "languages": "kotlin-objc",
    "version": "0.38.1"
  }
}
